pipeline {
    agent {
        docker {
            image 'node:18-alpine'
            args '-p 3000:3000'
        }
    }
    
    environment {
        NPM_CONFIG_CACHE = '/tmp/.npm'
    }
    
    stages {
        stage('Test') {
            steps {
                sh 'npm ci'
                sh 'npm test'
                sh 'npm run lint'
            }
        }
        
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    def deploymentConfig = readYaml file: 'deployment.yml'
                    echo "Deploying to ${deploymentConfig.environment}"
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
    }
}